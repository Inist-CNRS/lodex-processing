{
	"environnement": {
		"EZS_TITLE": "lodex-workers",
		"EZS_DESCRIPTION": "web services for Lodex",
		"EZS_METRICS": true,
		"EZS_CONCURRENCY": 4,
		"EZS_NSHARDS": 32,
		"EZS_CACHE": true,
		"CRON_VERBOSE": false,
		"NODE_OPTIONS": "--max_old_space_size=1024",
		"NODE_ENV": "production",
		"GIT_REPOSITORY": "https://github.com/Inist-CNRS/lodex-extented",
		"GIT_BRANCH": "v6.10.0",
		"GIT_DIRECTORY": "public/webservices"
	},
	"#DISABLED# packages": [
		"ezs-teeftfr@3.1.2",
		"@ezs/booster@1.2.4",
		"@ezs/istex@1.1.6",
		"@ezs/lodex@1.7.0",
		"@ezs/loterre@1.0.26",
		"@ezs/sparql@1.0.17",
		"@ezs/transformers@1.2.4"
	],
	"#DISABLED# tasks": [
		{
            "when": "30 * * * *",
            "execute": "/app/gitsync $GIT_REPOSITORY $GIT_BRANCH"
        },
		{
            "when": "0 0 0 31 1 *",
            "execute": "/app/gitsyncdir $GIT_REPOSITORY $GIT_BRANCH $GIT_DIRECTORY "
        }
	]

}
