{
	"environnement": {
		"EZS_TITLE": "lodex-workers",
		"EZS_DESCRIPTION": "web services for Lodex",
		"EZS_VERBOSE": true,
		"EZS_CONCURRENCY": 4,
		"EZS_NSHARDS": 32,
		"EZS_CACHE": false,
		"NODE_OPTIONS": "--max_old_space_size=1024",
		"NODE_ENV": "production",
		"GIT_REPOSITORY": "https://github.com/Inist-CNRS/lodex-extented",
		"GIT_BRANCH": "master",
		"GIT_DIRECTORY": "public/routines"
	},
	"tasks": [
		{
            "#Disabled when": "30 * * * *",
            "#Disabled execute": "/app/gitsync $GIT_REPOSITORY $GIT_BRANCH"
        },
		{
            "#Disabled when": "0 0 7 * *",
            "#Disabled execute": "/app/gitsyncdir $GIT_REPOSITORY $GIT_BRANCH $GIT_DIRECTORY "
        }
	]
}
